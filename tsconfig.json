{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "src/grammar.js",
    "src/tree-sitter.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
